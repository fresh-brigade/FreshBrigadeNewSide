<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.freshbrigade.com.freshbrigade.market.ManuallyRechargeWallet">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/active_code_layout"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Recharge Wallet"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            />


        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Call On This Number For Recharge Your Wallet"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="40dp"
            />
        <TextView
            android:id="@+id/tv_active_code"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="+919116156256"
            android:textStyle="bold"
            android:textColor="#176DB3"
            android:textSize="16sp"
            android:layout_marginHorizontal="40dp"
            />
        <Button
            android:id="@+id/btn_active_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:paddingHorizontal="5dp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Recharge"
            android:textColor="#fff"
            android:background="@drawable/bg_rechargebtn_layout"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:id="@+id/number"
            />




    </LinearLayout>

</LinearLayout>
