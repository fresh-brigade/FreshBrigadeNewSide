<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/vendor_select_layout"
    android:layout_width="wrap_content"
   android:layout_marginLeft="5dp"

    android:padding="2dp"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/venname"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:textSize="12dp"
                    android:lines="2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Potato"
                    />
                <TextView
                    android:id="@+id/vType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:textSize="9dp"
                    android:text="(2000)"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/slecteditemImage"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:tint="@color/green"
                    android:layout_gravity="center|right"
                    android:src="@drawable/minus"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/minQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="@dimen/_12ssp"
                    android:text="↓"
                    />


                <TextView
                    android:id="@+id/priviousday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="NEW"
                    android:textColor="#000"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/minus"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/venprice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="42$"
                    android:textSize="@dimen/_8ssp"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/high_price_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#87D330"
                    android:textSize="@dimen/_16ssp"
                    android:text="↓"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/law_price_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#F32222"
                    android:textSize="@dimen/_16ssp"
                    android:text="↑"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</LinearLayout>